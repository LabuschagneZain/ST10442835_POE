@model IEnumerable<ST10442835_CLDV6212_POE.Models.Product>

@{
    ViewData["Title"] = "Products";
    bool isCustomer = User.IsInRole("customer");
    bool isAdmin = User.IsInRole("admin");
    var username = User.Identity?.Name ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Products</h2>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var shortId = !string.IsNullOrWhiteSpace(item?.RowKey)
                    ? (item.RowKey.Length > 8 ? item.RowKey[..8] + "..." : item.RowKey)
                    : "-";

                    var desc = item?.Description ?? "";
                    var stock = item?.StockAvailable ?? 0;
                    var badge = stock > 10 ? "success" : stock > 0 ? "warning" : "danger";

                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item?.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.ProductName"
                                     class="img-thumbnail"
                                     style="width:50px;height:50px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center"
                                     style="width:50px;height:50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td><code>@shortId</code></td>
                        <td>@item?.ProductName</td>
                        <td>@(desc.Length > 50 ? desc[..50] + "..." : desc)</td>
                        <td>
                            <strong class="text-success">@item?.Price.ToString("C")</strong>
                            @if (((decimal)(item?.Price ?? 0)) <= 0m)
                            {
                                <br />
                                <small class="text-danger">⚠️ Price not set</small>
                            }
                        </td>
                        <td><span class="badge bg-@badge">@stock</span></td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@item?.RowKey"
                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete('@item?.RowKey', '@item?.ProductName')"
                                            title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }

                                @if (User.Identity.IsAuthenticated && isCustomer)
                                {
                                    @if (stock > 0)
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-success"
                                                onclick="selectProduct('@item.RowKey', '@item.ProductName', @stock)">
                                            <i class="fas fa-check"></i> Select
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary" disabled title="Out of Stock">
                                            <i class="fas fa-times-circle"></i> Out of Stock
                                        </button>
                                    }
                                }

                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Login" asp-action="Index"
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-sign-in-alt"></i> Login to Add
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Selected Product Panel -->
    <div id="selectedProductPanel" class="card mt-4" style="display:none;">
        <div class="card-body">
            <h5 class="card-title">Selected Product</h5>
            <form method="post" asp-controller="Cart" asp-action="Add">
                @Html.AntiForgeryToken()
                <div class="mb-2">
                    <label>Customer Username</label>
                    <input type="text" class="form-control" id="selectedUsername" name="username" value="@username" readonly />
                </div>
                <div class="mb-2">
                    <label>Product ID</label>
                    <input type="text" class="form-control" id="selectedProductId" name="productId" readonly />
                </div>
                <div class="mb-2">
                    <label>Quantity</label>
                    <input type="number" class="form-control" id="selectedQuantity" name="quantity" value="1" min="1" />
                </div>
                <button type="submit" class="btn btn-success">Add to Cart</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
        @if (isAdmin)
        {
            <a asp-action="Create" class="alert-link">Add your first product</a>
        }
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete product <strong id="productName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById("productName").textContent = productName || "";
            var deleteUrl = "@Url.Action("Delete", "Product")";
            document.getElementById("deleteForm").action = deleteUrl + "/" + encodeURIComponent(productId || "");
            new bootstrap.Modal(document.getElementById("deleteModal")).show();
        }

        function selectProduct(productId, productName, maxStock) {
            document.getElementById("selectedProductPanel").style.display = "block";
            document.getElementById("selectedProductId").value = productId;
            document.getElementById("selectedQuantity").max = maxStock;
        }
    </script>
}
